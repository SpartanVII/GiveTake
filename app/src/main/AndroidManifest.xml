<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.givetake">

    <application
        android:allowBackup="true"
        android:icon="@drawable/our_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/our_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.GiveTake">


        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".ui.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.GiveTake.NoActionBar" />
        <activity
            android:name=".ui.activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.GiveTake.NoActionBar" />
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.GiveTake.NoActionBar" />
        <activity
            android:name=".ui.activities.EditProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.GiveTake.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activities.AddProductActivity"
            android:exported="true"
            android:theme="@style/Theme.GiveTake.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activities.InfoProductActivity"
            android:exported="false"
            android:theme="@style/Theme.GiveTake.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activities.MyProductActivity"
            android:exported="false"
            android:theme="@style/Theme.GiveTake.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.MainActivity" />
        </activity>
    </application>

</manifest>