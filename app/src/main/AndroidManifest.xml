<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.givetake" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/our_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/our_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.GiveTake" >

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.GiveTake.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.GiveTake.NoActionBar" >
        </activity>
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.GiveTake.NoActionBar" >
        </activity>
        <activity
            android:name=".ui.EditProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.GiveTake.NoActionBar" >
        </activity>

        <activity
            android:name=".ui.AddProductActivity"
            android:exported="true"
            android:theme="@style/Theme.GiveTake.NoActionBar" >
        </activity>
    </application>

</manifest>